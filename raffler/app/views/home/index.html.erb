<h1>Build a taco!</h1>

<div id="orders" ng-controller="OrdersCtrl">
  
  <table class="table table-striped table-bordered">
    <th>Previous Orders</th><th></th>
      <tr ng-repeat="order in orders">
        <td>{{ order.patron}}</td> <td>{{order.total | currency }}</td>
      </tr>
  </table>
  <h3> New Order</h3>
  <form ng-submit="addOrder()" class="form-horizontal">
    <div class="control-group">
    <label>Name:</label>
    <input type="text" ng-model="newOrder.patron">
    <p ng-model="newOrder.total" >{{ orderTotal() | currency}}</p>
       <ul ng-model="newOrder.items">
        <li ng-repeat="item in orderItems">
          {{ item.name }} - {{ item.price | currency }}
        </li>
    </ul>
    <input type="submit" class="btn" value="Finish">
    </div>
  </form>
  
</div>

<div id="items" ng-controller="ItemsCtrl">
  <table class="table-bordered table-hover">
    <th>Menu</th> <th></th>
  <tbody>
    <tr ng-repeat="item in items" ng-click="addItem(item)">
      <td>{{ item.name }} </td> <td> {{ item.price | currency }}</td>
    </tr>
  </tbody>
  </table>
</div>